{
    ignorePaths: [
        ".archive/**"
    ],
    customManagers: [
        {
            customType: "jsonata",
            fileFormat: "yaml",
            managerFilePatterns: ["**/k0s-*-cluster.yaml"],
            matchStrings: ["spec.k0s.{\"currentValue\": version}"],
            depNameTemplate: "k0sproject/k0s",
            datasourceTemplate: "github-releases"
        },
        {
            customType: "jsonata",
            fileFormat: "yaml",
            managerFilePatterns: ["/(^|/)values\\.ya?ml$/"],
            matchStrings: [
                "image.{\"depName\": name, \"currentValue\": tag}",
                "*.image.{\"depName\": name, \"currentValue\": tag}"
            ],
            datasourceTemplate: "docker"
        },
        {
            customType: "jsonata",
            fileFormat: "yaml",
            managerFilePatterns: ["/(.*-)?app.yaml$/"],
            matchStrings: [
                "helm.{ 'packageName': (($exists(repo) and repo) ? repo : 'registry.gitlab.com/juulun/helm-charts/charts') & '/' & chart, 'currentValue': version }"
            ],
            datasourceTemplate: "helm"
        },
        {
            customType: "jsonata",
            fileFormat: "yaml",
            managerFilePatterns: ["03_apps/values.yaml"],
            matchStrings: [
                "{\"custom_chart\": secretsChart, \"currentValue\": secretsChartVersion, \"custom_repo\": mainHelmRepo}"
            ],
            datasourceTemplate: "helm",
            packageNameTemplate: "{{custom_repo}}/{{custom_chart}}"
        },
        {
            customType: "jsonata",
            fileFormat: "yaml",
            managerFilePatterns: ["03_apps/values.yaml"],
            matchStrings: [
                "{\"custom_chart\": networkPolicyChart, \"currentValue\": networkPolicyChartVersion, \"custom_repo\": mainHelmRepo}"
            ],
            datasourceTemplate: "helm",
            packageNameTemplate: "{{custom_repo}}/{{custom_chart}}"
        }
    ]
}
