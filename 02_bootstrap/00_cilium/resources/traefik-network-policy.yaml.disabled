apiVersion: cilium.io/v2
kind: CiliumNetworkPolicy
metadata:
  name: traefik-ingress-policy
  namespace: traefik
spec:
  endpointSelector: {}
  ingress:
    - fromEntities:
        - world
      toPorts:
        - ports:
            - port: "8000"
        - ports:
            - port: "8443"
  egress:
    - toEndpoints: {}
